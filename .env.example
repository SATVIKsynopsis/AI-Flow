# Environment Variables Template - Copy to .env for development/production
# DO NOT commit .env to git - it contains sensitive API keys

# Supabase Configuration (Required for authentication)
# Get from: https://supabase.com/ → Your Project → Settings → API
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Calendar Integration (for ScheduleX)
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/google-oauth-redirect.html

# Microsoft Outlook Integration (optional)
# Get from: https://portal.azure.com/ → App registrations
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
VITE_MICROSOFT_AUTHORITY=https://login.microsoftonline.com/common
VITE_MICROSOFT_REDIRECT_URI=http://localhost:5173/auth/microsoft/callback

# Gemini AI API (for AI tools and task optimization)
# Get from: https://makersuite.google.com/app/apikey
VITE_APP_GEMINI_API_KEY=your_gemini_api_key_here

# Backend API
VITE_API_BASE_URL=http://localhost:5000

# Google Analytics (optional)
# Get from: https://analytics.google.com/
VITE_APP_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# Blogger API (optional)
# Get from: https://console.cloud.google.com/ → APIs & Services → Blogger API
VITE_BLOGGER_API_KEY=your_blogger_api_key_here
VITE_BLOG_ID=your_blog_id_here

# Development Settings
VITE_DEBUG_CALENDAR=false
